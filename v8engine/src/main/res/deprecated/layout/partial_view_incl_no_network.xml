<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/no_network_connection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    android:visibility="gone"
    tools:visibility="visible"
    >


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="184dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/error2"
        />

    <TextView
        android:id="@+id/no_connextion_text"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center_horizontal"
        android:text="@string/could_not_connect_internet"
        android:textColor="@color/aptoide_orange"
        android:textSize="14sp"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/retry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:focusable="true"
        android:fontFamily="@string/font_family_medium"
        android:gravity="center"
        android:text="@string/retry_connection"
        android:textAllCaps="true"
        android:textColor="@color/default_color"
        android:textSize="14sp"
        style="?attr/customButtonThinLine"
        />


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="10dp"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/spot_and_share_ic_action_spotshare_orange"
            />
        <TextView
            android:id="@+id/call_to_spot_and_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:fontFamily="@string/font_family_regular"
            android:gravity="center_horizontal"
            android:text="@string/having_some_trouble_v2"
            android:textSize="14sp"
            />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/spot_and_share_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:background="@drawable/flat_selector"
            android:focusable="true"
            android:fontFamily="@string/font_family_medium"
            android:gravity="center"
            android:text="@string/Share_apps_now"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            />

      </LinearLayout>


    </android.support.v7.widget.CardView>


  </LinearLayout>

</ScrollView>