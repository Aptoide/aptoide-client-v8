<resources>

  <style name="AppViewWidget">
    <item name="android:layout_marginTop">@dimen/appview_vertical_margin</item>
    <item name="android:layout_marginBottom">@dimen/appview_vertical_margin</item>
    <item name="android:paddingLeft">@dimen/appview_side_margin</item>
    <item name="android:paddingStart">@dimen/appview_side_margin</item>
    <item name="android:paddingRight">@dimen/appview_side_margin</item>
    <item name="android:paddingEnd">@dimen/appview_side_margin</item>
  </style>

  <style name="FragmentRateAndReviewsProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">10dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginEnd">10dp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginRight">10dp</item>
    <item name="android:layout_marginStart">10dp</item>
    <item name="android:indeterminate">false</item>
    <item name="android:max">100</item>
    <item name="android:progress">0</item>
    <item name="android:progressDrawable">@drawable/dark_progress_bar</item>
  </style>
</resources>
