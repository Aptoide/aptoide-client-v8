<resources>


  <style name="Aptoide.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="colorButtonNormal">@color/orange_700</item>
    <item name="colorControlHighlight">@color/orange</item>
  </style>

  <style name="Aptoide.Button.Ghost">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@drawable/btn_ghost_theme</item>
    <item name="android:textColor">@color/orange_700</item>
  </style>

  <!-- ?? -->
  <style name="Aptoide.Button.Ghost.ThinBlackAlpha">
    <item name="android:background">@drawable/btn_ghost_theme_blackalpha</item>
    <item name="android:textColor">@color/black_87_alpha</item>
  </style>

  <style name="Aptoide.Button.S">
    <item name="android:layout_height">@dimen/button_small_height</item>
    <item name="android:textSize">10sp</item>
  </style>

  <style name="Aptoide.Button.Ghost.S">
    <item name="android:layout_height">@dimen/button_small_height</item>
    <item name="android:textSize">10sp</item>
  </style>


  <style name="Aptoide.Button.Facebook">
    <item name="colorAccent">@color/facebook</item>
    <item name="colorControlHighlight">@color/facebook_highlight</item>
    <item name="android:drawableLeft">@drawable/com_facebook_button_icon_white</item>
    <item name="android:text">@string/connect_with_facebook</item>
    <item name="android:contentDescription">@string/com_facebook_loginview_log_in_button_long</item>
  </style>


  <style name="Aptoide.Button.Google">
    <item name="colorAccent">@color/google</item>
    <item name="colorControlHighlight">@color/google_highlight</item>
    <item name="android:drawableLeft">@drawable/google_plus_ic</item>
    <item name="android:text">@string/connect_with_google</item>
    <item name="android:contentDescription">@string/google</item>
  </style>

</resources>
