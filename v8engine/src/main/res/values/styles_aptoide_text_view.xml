<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Aptoide"/>

  <!-- Sizes -->
  <style name="Aptoide.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="Aptoide.TextView.Regular">
    <item name="android:fontFamily">sans-serif</item>
  </style>

  <style name="Aptoide.TextView.Medium">
    <item name="android:fontFamily">sans-serif-medium</item>
  </style>

  <style name="Aptoide.TextView.Regular.XXL">
    <item name="android:textSize">34sp</item>
    <item name="android:lineSpacingExtra">2dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.XL">
    <item name="android:textSize">24sp</item>
    <item name="android:lineSpacingExtra">4dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.L">
    <item name="android:textSize">20sp</item>
    <item name="android:lineSpacingExtra">4dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.M">
    <item name="android:textSize">16sp</item>
    <item name="android:lineSpacingExtra">4dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.S">
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingExtra">3dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.XS">
    <item name="android:textSize">12sp</item>
    <item name="android:lineSpacingExtra">2dp</item>
  </style>

  <style name="Aptoide.TextView.Regular.XXS">
    <item name="android:textSize">10sp</item>
    <item name="android:lineSpacingExtra">1dp</item>
  </style>

  <style name="Aptoide.TextView.Medium.L">
    <item name="android:textSize">20sp</item>
    <item name="android:lineSpacingExtra">4dp</item>
  </style>

  <style name="Aptoide.TextView.Medium.M">
    <item name="android:textSize">16sp</item>
    <item name="android:lineSpacingExtra">4dp</item>
  </style>

  <style name="Aptoide.TextView.Medium.S">
    <item name="android:textSize">14sp</item>
    <item name="android:lineSpacingExtra">5dp</item>
  </style>


  <!-- Colors-->
  <style name="Aptoide.TextView.Regular.XS.GreyFog">
    <item name="android:textColor">@color/grey_fog_dark</item>
  </style>

  <style name="Aptoide.TextView.Regular.XXS.GreyFog">
    <item name="android:textColor">@color/grey_fog_dark</item>
  </style>

  <style name="Aptoide.TextView.Regular.L.Grey">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.M.Grey">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.M.BlackAlpha">
    <item name="android:textColor">@color/black_87_alpha</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Grey">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Grey700">
    <item name="android:textColor">@color/grey_700</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.GreyMedium">
    <item name="android:textColor">@color/grey_medium</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Greyfog">
    <item name="android:textColor">@color/grey_fog_normal</item>
  </style>

  <style name="Aptoide.TextView.Regular.XS.Grey">
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.TextView.Regular.XS.BlackAlpha">
    <item name="android:textColor">@color/black_87_alpha</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.BlackAlpha">
    <item name="android:textColor">@color/black_87_alpha</item>
  </style>

  <style name="Aptoide.TextView.Medium.L.Black">
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="Aptoide.TextView.Regular.S.Red700">
    <item name="android:textColor">@color/red_700</item>
  </style>

  <!-- Text Style -->
  <style name="Aptoide.TextView.Regular.XXS.GreyFog.AllCaps">
    <item name="android:textAllCaps">true</item>
  </style>

</resources>
