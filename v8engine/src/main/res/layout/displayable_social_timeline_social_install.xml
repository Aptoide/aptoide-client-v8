<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <include layout="@layout/apps_timeline_card_header"/>

    <TextView
        android:id="@+id/social_shared_by"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="7dp"
        android:text="@string/social_timeline_shared_by"
        android:textStyle="italic"
        android:visibility="gone"
        tools:text="shared by Jonenz"
        tools:visibility="visible"
        />


    <RelativeLayout
        android:id="@+id/displayable_social_timeline_recommendation_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_recommendation_icon"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_marginBottom="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="9.3dp"
          android:paddingTop="3dp"
          android:scaleType="fitCenter"
          tools:ignore="contentDescription"
          tools:src="@mipmap/ic_launcher"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_recommendation_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignTop="@+id/displayable_social_timeline_recommendation_icon"
          android:layout_marginEnd="15.1dp"
          android:layout_marginLeft="10.3dp"
          android:layout_marginRight="15.1dp"
          android:layout_marginStart="10.3dp"
          android:layout_toEndOf="@id/displayable_social_timeline_recommendation_icon"
          android:layout_toRightOf="@+id/displayable_social_timeline_recommendation_icon"
          android:ellipsize="end"
          android:lines="1"
          android:text="Installed and Recommends"
          style="@style/Widget.Aptoide.Card.Body"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_recommendation_similar_apps"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/displayable_social_timeline_recommendation_name"
          android:layout_marginEnd="15.1dp"
          android:layout_marginLeft="13.3dp"
          android:layout_marginRight="15.1dp"
          android:layout_marginStart="13.3dp"
          android:layout_toEndOf="@+id/displayable_social_timeline_recommendation_icon"
          android:layout_toRightOf="@+id/displayable_social_timeline_recommendation_icon"
          android:background="@android:color/transparent"
          android:clickable="false"
          android:ellipsize="end"
          android:maxLines="2"
          android:paddingTop="3dp"
          tools:text="Clash Royale"
          style="@style/Widget.Aptoide.Card.Title.Large.Black"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_recommendation_get_app_button"
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:layout_alignStart="@+id/displayable_social_timeline_recommendation_name"
          android:layout_alignLeft="@+id/displayable_social_timeline_recommendation_name"
          android:layout_below="@+id/displayable_social_timeline_recommendation_icon"
          android:layout_marginBottom="5dp"
          android:layout_marginEnd="12dp"
          android:layout_marginRight="12dp"
          android:background="@android:color/transparent"
          android:clickable="false"
          android:gravity="center_vertical"
          tools:text="Get app Clash Royale"
          style="@style/Widget.Aptoide.Card.Button"
          />

    </RelativeLayout>

    <View
        android:id="@+id/partial_social_timeline_thumbnail_divider2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />

    <include layout="@layout/social_bar_timeline"/>

    <LinearLayout
        android:id="@+id/social_privacy_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        >

      <CheckBox
          android:id="@+id/social_preview_checkbox"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_margin="5dp"
          style="?android:attr/textAppearanceMedium"
          />

      <TextView
          android:id="@+id/social_text_privacy"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="fill"
          android:layout_marginEnd="15dp"
          android:layout_marginRight="15dp"
          android:clickable="true"
          android:text="@string/social_timeline_share_title_checkbox"
          android:textColor="@color/almost_black"
          />
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>

