<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?attr/backgroundCardColor"
  android:clipChildren="false">


  <TextView
    android:id="@+id/social_number_of_likes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="16dp"
    android:layout_toLeftOf="@+id/social_like"
    android:layout_toStartOf="@id/social_like"
    android:text="@string/zero"
    android:textSize="@dimen/text_size_small"
    android:visibility="invisible"
    tools:text="10"
    tools:visibility="visible" />


  <LinearLayout
    android:id="@+id/social_like"
    android:layout_width="40dp"
    android:layout_height="62dp"
    android:layout_marginEnd="65dp"
    android:layout_marginRight="65dp"
    android:layout_toLeftOf="@+id/social_comment"
    android:layout_toStartOf="@+id/social_comment"
    android:clickable="true"
    android:clipChildren="false"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="invisible"
    tools:visibility="visible">

    <cm.aptoide.pt.v8engine.customviews.LikeButtonView
      android:id="@+id/social_like_button"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_gravity="center"
      android:clickable="false" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="6dp"
      android:text="@string/like"
      android:textAllCaps="true"
      android:textSize="@dimen/text_size_extra_small" />

  </LinearLayout>

  <TextView
    android:id="@+id/social_number_of_comments"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@id/social_number_of_likes"
    android:layout_marginRight="3dp"
    android:layout_toLeftOf="@+id/social_comment"
    android:layout_toStartOf="@id/social_comment"
    android:text="@string/zero"
    android:textSize="@dimen/text_size_small"
    android:visibility="invisible"
    tools:text="10"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/social_comment"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/social_like"
    android:layout_marginEnd="65dp"
    android:layout_marginRight="66dp"
    android:layout_marginTop="13dp"
    android:layout_toLeftOf="@+id/social_share"
    android:layout_toStartOf="@id/social_share"
    android:clickable="true"
    android:drawablePadding="4.4dp"
    android:drawableTop="@drawable/timeline_comment"
    android:gravity="center"
    android:orientation="vertical"
    android:text="@string/comment"
    android:textAllCaps="true"
    android:textSize="@dimen/text_size_extra_small"
    android:visibility="invisible"
    tools:visibility="visible" />

  <TextView
    android:id="@id/social_share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@id/social_like"
    android:layout_marginEnd="25.7dp"
    android:layout_marginRight="25.7dp"
    android:layout_marginTop="13dp"
    android:clickable="true"
    android:drawablePadding="3.5dp"
    android:drawableTop="@drawable/timeline_share"
    android:gravity="center"
    android:orientation="vertical"
    android:text="@string/share"
    android:textAllCaps="true"
    android:textSize="@dimen/text_size_extra_small" />
</RelativeLayout>
