            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="0"
            android:textColor="?android:attr/textColorSecondary"
            />
    </LinearLayout>

</RelativeLayout>
