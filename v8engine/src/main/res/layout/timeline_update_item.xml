<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/displayable_social_timeline_app_update_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_app_update_header"
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_app_update_card_image"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="14dp"
          tools:ignore="contentDescription"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_app_update_card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:layout_marginTop="14.7dp"
          android:ellipsize="end"
          android:lines="1"
          tools:text="Hamata6 Store"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_app_update_card_card_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/displayable_social_timeline_app_update_card_title"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:ellipsize="end"
          android:lines="1"
          tools:text="HÃ¡ duas horas"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />

      <ImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_alignEnd="@+id/card_custom_view_line_separator"
          android:layout_alignRight="@+id/card_custom_view_line_separator"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:src="@drawable/appstimeline_appupdate_shop_icon"
          />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_app_update_icon"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_marginBottom="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginStart="12dp"
          android:layout_marginTop="9.3dp"
          android:paddingTop="3dp"
          android:scaleType="fitCenter"
          tools:ignore="contentDescription"
          tools:src="@mipmap/ic_launcher"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_app_update_name"
          android:layout_alignTop="@+id/displayable_social_timeline_app_update_icon"
          android:layout_marginEnd="15.1dp"
          android:layout_marginLeft="13.3dp"
          android:layout_marginRight="15.1dp"
          android:layout_marginStart="13.3dp"
          android:layout_toEndOf="@id/displayable_social_timeline_app_update_icon"
          android:layout_toRightOf="@+id/displayable_social_timeline_app_update_icon"
          android:maxLines="2"
          android:text="@string/displayable_social_timeline_app_update_name"
          tools:text="App Snapchat"
          style="@style/Aptoide.TextView.Medium.L.Black"
          />
      <Button
          android:id="@+id/displayable_social_timeline_recommendation_get_app_button"
          android:layout_width="130dp"
          android:layout_height="33dp"
          android:layout_alignBottom="@id/displayable_social_timeline_app_update_icon"
          android:layout_marginEnd="15.1dp"
          android:layout_marginLeft="8.3dp"
          android:layout_marginRight="15.1dp"
          android:layout_marginStart="8.3dp"
          android:layout_toEndOf="@id/displayable_social_timeline_app_update_icon"
          android:textAllCaps="true"
          android:textSize="10sp"
          tools:text="update app"
          style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_app_update_error"
          android:layout_above="@id/displayable_social_timeline_recommendation_get_app_button"
          android:layout_marginEnd="15.1dp"
          android:layout_marginLeft="13.3dp"
          android:layout_marginRight="15.1dp"
          android:layout_marginStart="13.3dp"
          android:layout_toEndOf="@id/displayable_social_timeline_app_update_icon"
          android:layout_toRightOf="@id/displayable_social_timeline_app_update_icon"
          android:text="@string/displayable_social_timeline_app_update_error"
          android:visibility="gone"
          tools:text="Update Error"
          tools:visibility="visible"
          style="@style/Aptoide.TextView.Regular.S.Red700"
          />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="9.3dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />
    <include layout="@layout/social_last_comment_bar"/>
    <include layout="@layout/social_bar_timeline"/>
  </LinearLayout>
</android.support.v7.widget.CardView>