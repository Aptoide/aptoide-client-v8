<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timeline_stats_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="?attr/backgroundMain"
    >

  <android.support.v7.widget.AppCompatButton
      android:id="@+id/followers"
      android:layout_width="0dp"
      android:layout_height="64dp"
      android:textAllCaps="false"
      android:textColor="?attr/colorPrimary"
      android:textSize="@dimen/text_size_medium_small"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/leftSeparator"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/leftSeparator"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="following 512"
      style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
      />

  <View xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/leftSeparator"
      android:layout_width="1dp"
      android:layout_height="54dp"
      android:background="@color/lighter_custom_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/following"
      app:layout_constraintLeft_toRightOf="@id/followers"
      app:layout_constraintRight_toLeftOf="@id/following"
      app:layout_constraintStart_toEndOf="@id/followers"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_conversion_absoluteHeight="50dp"
      tools:layout_conversion_absoluteWidth="1dp"
      tools:layout_conversion_absoluteX="137dp"
      tools:layout_conversion_absoluteY="10dp"
      tools:layout_editor_absoluteX="137dp"
      tools:layout_editor_absoluteY="8dp"
      />

  <android.support.v7.widget.AppCompatButton
      android:id="@+id/following"
      android:layout_width="0dp"
      android:layout_height="64dp"
      android:textAllCaps="false"
      android:textColor="?attr/colorPrimary"
      android:textSize="@dimen/text_size_medium_small"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/rightSeparator"
      app:layout_constraintLeft_toRightOf="@+id/leftSeparator"
      app:layout_constraintRight_toLeftOf="@+id/rightSeparator"
      app:layout_constraintStart_toEndOf="@+id/leftSeparator"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="following 512"
      style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
      />

  <View xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/rightSeparator"
      android:layout_width="1dp"
      android:layout_height="54dp"
      android:background="@color/lighter_custom_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@id/following"
      app:layout_constraintRight_toLeftOf="@+id/follow_friends_button"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_conversion_absoluteHeight="50dp"
      tools:layout_conversion_absoluteWidth="1dp"
      tools:layout_conversion_absoluteX="275dp"
      tools:layout_conversion_absoluteY="10dp"
      tools:layout_editor_absoluteX="275dp"
      tools:layout_editor_absoluteY="8dp"
      />

  <android.support.v7.widget.AppCompatButton
      android:id="@+id/follow_friends_button"
      android:layout_width="0dp"
      android:layout_height="64dp"
      android:drawableLeft="@drawable/follow_add_icon"
      android:drawableStart="@drawable/follow_add_icon"
      android:lines="2"
      android:padding="5dp"
      android:text="@string/follow_friends"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:textSize="@dimen/text_size_medium_small"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/rightSeparator"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="following 512"
      style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
      />

</android.support.constraint.ConstraintLayout>