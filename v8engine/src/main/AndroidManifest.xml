<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cm.aptoide.pt.v8engine">


  <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
  <uses-permission android:name="android.permission.INSTALL_PACKAGES"/>
  <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
  <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
  <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>

  <uses-sdk
    android:minSdkVersion="15"
    tools:overrideLibrary="com.paypal.android.sdk.payments"
    />

  <application
      android:allowBackup="true"
      >

    <activity android:name=".activity.SearchActivity">
      <intent-filter>
        <action android:name="android.intent.action.SEARCH"/>
      </intent-filter>
      <meta-data
          android:name="android.app.searchable"
          android:resource="@xml/searchable"/>
    </activity>

    <activity
        android:name=".activity.PaymentActivity"
        android:theme="@style/AppBaseTheme.Payment"/>

    <activity android:name=".payment.providers.paypal.PayPalPaymentActivity"/>
    <activity android:name=".payment.authorizations.WebAuthorizationActivity"/>

    <activity
        android:name=".receivers.DeepLinkIntentReceiver"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:mimeType="application/vnd.cm.aptoide.pt"
            android:scheme="file"/>
        <data
            android:mimeType="application/vnd.cm.aptoide.pt"
            android:scheme="http"/>
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data android:scheme="aptoide"/>
        <data android:scheme="aptoiderepo"/>
        <data android:scheme="aptoidexml"/>
        <data android:scheme="aptoideinstall"/>
        <data android:scheme="aptoidesearch"/>
        <data android:scheme="aptword"/>
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data android:scheme="market"/>
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="market.android.com"
            android:scheme="https"/>
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="webservices.aptoide.com"
            android:pathPrefix="/apkinstall"
            android:scheme="http"/>

      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="play.google.com"
            android:scheme="https"/>
        <data
            android:host="play.google.com"
            android:scheme="http"/>
      </intent-filter>

      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>

        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>

        <data
            android:host="imgs.aptoide.com"
            android:pathPattern="*//.myapp"
            android:scheme="http"/>
      </intent-filter>
    </activity>

    <receiver android:name=".receivers.LoginBroadcastReceiver">
      <intent-filter>
        <action android:name="${applicationId}.accountmanager.broadcast.login"/>
        <action android:name="${applicationId}.accountmanager.broadcast.logout"/>
      </intent-filter>
    </receiver>

    <receiver android:name=".install.InstalledBroadcastReceiver">
      <intent-filter android:priority="999">
        <action android:name="android.intent.action.PACKAGE_ADDED"/>
        <action android:name="android.intent.action.PACKAGE_REMOVED"/>
        <action android:name="android.intent.action.PACKAGE_REPLACED"/>

        <data android:scheme="package"/>
      </intent-filter>
    </receiver>

    <service android:name=".services.PullingContentService"/>
    <receiver android:name=".receivers.PullingContentReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
        <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
      </intent-filter>
    </receiver>


    <receiver android:name=".link.customtabs.CustomTabNativeReceiver"/>

    <receiver
        android:name=".receivers.NetworkStateReceiver"
        android:enabled="true"
        android:exported="false">
      <intent-filter>
        <!--<action android:name="android.net.conn.CONNECTIVITY_CHANGE"/> -->
        <action android:name="android.net.wifi.WIFI_STATE_CHANGED" />
      </intent-filter>
    </receiver>

    <service android:name=".InstallService"/>

    <service android:name=".install.InstalledIntentService"/>

  </application>

</manifest>
