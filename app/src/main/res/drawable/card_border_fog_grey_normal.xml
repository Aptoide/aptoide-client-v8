<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:color="@color/white" android:state_pressed="true">
    <shape>
      <stroke
          android:color="@color/white"
          android:width="1dp"/>
      <corners
          android:radius="4dp"/>
    </shape>
  </item>
  <item android:color="@color/grey_fog_normal">
    <shape>
      <solid android:color="@color/white"/>
      <stroke
          android:color="@color/grey_fog_normal"
          android:width="1dp"/>
      <corners
          android:radius="4dp"/>
    </shape>
  </item>
</selector>