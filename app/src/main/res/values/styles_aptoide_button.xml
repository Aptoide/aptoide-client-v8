<resources>
  <!--Big buttons-->
  <!--Raised button-->
  <style name="Aptoide.Button" parent="Widget.AppCompat.Button.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textColor">?attr/raisedButtonTextColor</item>
    <item name="android:fontFamily">?attr/buttonTextFont</item>
    <item name="android:textSize">?attr/buttonTextSize</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">?attr/raisedButtonBackground</item>
    <item name="colorControlHighlight">?attr/colorPrimaryDark</item>
  </style>

  <!-- Ghost button-->
  <style name="Aptoide.Button.Ghost">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:fontFamily">?attr/buttonTextFont</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">?attr/ghostButtonBackground</item>
    <item name="android:textColor">?attr/colorPrimaryDark</item>
    <item name="android:stateListAnimator">@null</item>
  </style>

  <!-- Flat Button-->
  <style name="Aptoide.Button.Flat" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textColor">?attr/colorPrimaryDark</item>
    <item name="android:fontFamily">?attr/buttonTextFont</item>
    <item name="android:textSize">?attr/buttonTextSize</item>
    <item name="android:textAllCaps">true</item>
  </style>


  <!--Small buttons-->
  <!--Raised button-->
  <style name="Aptoide.Button.S">
    <item name="android:layout_height">@dimen/button_small_height</item>
    <item name="android:textSize">?attr/buttonTextSizeSmall</item>
  </style>

  <!-- Ghost button-->
  <style name="Aptoide.Button.Ghost.S">
    <item name="android:layout_height">@dimen/button_small_height</item>
    <item name="android:textSize">?attr/buttonTextSizeSmall</item>
  </style>

  <!-- Flat Button-->
  <style name="Aptoide.Button.Flat.S">
    <item name="android:layout_height">@dimen/button_small_height</item>
    <item name="android:textSize">?attr/buttonTextSizeSmall</item>
  </style>


  <!--Icon buttons-->
  <style name="Aptoide.Button.Facebook">
    <item name="android:paddingRight">20dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:background">@drawable/facebook_button_rounded</item>
    <item name="android:drawableLeft">@drawable/f_copy</item>
    <item name="android:text">@string/facebook</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:contentDescription">@string/com_facebook_loginview_log_in_button_long</item>
  </style>

  <style name="Aptoide.Button.FacebookFull">
    <item name="android:paddingRight">50dp</item>
    <item name="android:paddingLeft">50dp</item>
    <item name="android:background">@drawable/facebook_button_rounded</item>
    <item name="android:drawableLeft">@drawable/f_copy</item>
    <item name="android:text">@string/connect_with_facebook</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:contentDescription">@string/com_facebook_loginview_log_in_button_long</item>
  </style>

  <style name="Aptoide.Button.Ghost.GreyFogLight.Google">
    <item name="android:paddingRight">20dp</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="background">@color/white</item>
    <item name="android:drawableLeft">@drawable/google_icon_copy</item>
    <item name="android:text">@string/google</item>
    <item name="android:textColor">@color/google_grey</item>
    <item name="android:contentDescription">@string/google</item>
  </style>

  <style name="Aptoide.Button.Ghost.GreyFogLight.GoogleFull">
    <item name="android:paddingRight">50dp</item>
    <item name="android:paddingLeft">50dp</item>
    <item name="background">@color/white</item>
    <item name="android:drawableLeft">@drawable/google_icon_copy</item>
    <item name="android:text">@string/connect_google</item>
    <item name="android:textColor">@color/google_grey</item>
    <item name="android:contentDescription">@string/google</item>
  </style>


  <!--Install button-->
  <style name="Aptoide.Button.Install" parent="Aptoide.Button">
    <item name="android:background">?attr/installButtonBackground</item>
  </style>


  <!--Other buttons-->
  <style name="Aptoide.Button.Ghost.ThinBlackAlpha">
    <item name="android:background">@drawable/btn_ghost_theme_blackalpha</item>
    <item name="android:textColor">@color/black_87_alpha</item>
  </style>

  <style name="Aptoide.Button.Ghost.Grey">
    <item name="android:background">@drawable/btn_ghost_theme_grey_fog_light</item>
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.Button.Ghost.GreyFogLight">
    <item name="android:background">@drawable/btn_ghost_theme_grey_fog_light</item>
    <item name="android:textColor">@color/grey_fog_light</item>
  </style>

  <style name="Aptoide.Button.Ghost.S.Grey">
    <item name="android:background">@drawable/btn_ghost_theme_grey_fog_light</item>
    <item name="android:textColor">@color/grey</item>
  </style>

  <style name="Aptoide.Button.Flat.GreyMedium" parent="Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/button_height</item>
    <item name="android:textColor">@color/grey_medium</item>
    <item name="android:fontFamily">sans-serif</item>
    <item name="android:textSize">?attr/buttonTextSize</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="Aptoide.Button.Flat.S.GreyMedium">
    <item name="android:textColor">@color/grey_medium</item>
  </style>
</resources>
