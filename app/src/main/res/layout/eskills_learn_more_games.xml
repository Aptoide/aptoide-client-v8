<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/header"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/see_all_button"
        android:layout_marginStart="16dp"
        android:text="@string/eskills_games_title"
        android:textColor="@color/white"
        style="@style/Aptoide.TextView.Regular"
        android:textSize="20sp"
      />
    <android.widget.Button
        android:id="@+id/see_all_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/see_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Aptoide.Button.Flat.White"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <cm.aptoide.aptoideviews.recyclerview.GridRecyclerView
      android:id="@+id/apps_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:clipToPadding="false"
      android:layoutAnimation="@anim/grid_list_apps_anim"
      app:layout_constraintTop_toBottomOf="@id/header"
      android:nestedScrollingEnabled="false"
      />
  <cm.aptoide.aptoideviews.errors.ErrorView
      android:id="@+id/error_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      app:layout_constraintTop_toBottomOf="@id/header"
      android:theme="@style/AptoideThemeDark"
      />
  <include
      layout="@layout/partial_view_progress_bar"
      app:layout_constraintTop_toBottomOf="@id/header"      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:theme="@style/AptoideThemeDark"
      />
</androidx.constraintlayout.widget.ConstraintLayout>