<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="328dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/eskills_info_card1_bg"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:layout_marginHorizontal="8dp"
    >
        <TextView
            android:id="@+id/card_title"
            style="@style/Aptoide.TextView.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/eskills_v2_card_5_title"
            android:textColor="#6200F9"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/value_proposition_card_body"
            style="@style/Aptoide.TextView.Regular.S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/card_title"
            android:text="@string/eskills_v2_card_5_body"
            android:textColor="@color/black"
            />
</androidx.constraintlayout.widget.ConstraintLayout>