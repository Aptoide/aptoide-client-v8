<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginStart="30dp"
    android:orientation="vertical"
    >

  <ImageView
      android:id="@+id/addressbook_friends_graphic"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="24.3dp"
      android:src="@drawable/addressbook_graphic"
      />

  <TextView
      android:id="@+id/addressbook_friends_message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/addressbook_friends_graphic"
      android:layout_gravity="center"
      android:layout_marginBottom="5dp"
      android:layout_marginEnd="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginRight="30dp"
      android:layout_marginStart="30dp"
      android:layout_marginTop="10dp"
      android:clickable="false"
      android:gravity="center"
      android:lineSpacingExtra="5dp"
      android:lines="2"
      tools:text="@string/we_didn_t_find_any_contacts_that_are_using_aptoide"
      style="@style/Aptoide.TextView.Regular.S.GreyMedium"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/addressbook_friends_message"
      android:layout_marginTop="10dp"
      android:gravity="center_horizontal"
      android:text="@string/addressbook_invite_friends"
      android:textStyle="bold"
      style="@style/Aptoide.TextView.Regular.M.Theme"
      />

  <Button
      android:id="@+id/addressbook_share_social"
      android:layout_width="match_parent"
      android:layout_above="@+id/addressbook_allow_find"
      android:padding="10dp"
      android:text="@string/share_options_share_external"
      style="@style/Aptoide.Button"
      />


  <Button
      android:id="@+id/addressbook_allow_find"
      android:layout_width="match_parent"
      android:layout_above="@+id/addressbook_done"
      android:layout_marginTop="5dp"
      android:padding="10dp"
      android:text="@string/addressbook_allow_friends_find"
      style="@style/Aptoide.Button"
      />

  <Button
      android:id="@+id/addressbook_done"
      android:layout_width="match_parent"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="5dp"
      android:padding="10dp"
      android:text="@string/done"
      style="@style/Aptoide.Button.Ghost"
      />
</RelativeLayout>