<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="328dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/eskills_info_card2_bg"
    android:orientation="vertical"
    android:paddingTop="32dp"
    >
  <TextView
      android:id="@+id/card_title"
      style="@style/Aptoide.TextView.Medium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Fair competition"
      android:textColor="@color/yellow_eskills"
      android:textSize="18sp"
      app:layout_constraintTop_toTopOf="parent"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_begin="200dp"
      />
  <TextView
      android:id="@+id/value_proposition_card_body"
      style="@style/Aptoide.TextView.Regular.S.White"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="24dp"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:text="Get matched with players of your skills level to ensure fair tournaments."
      app:layout_constraintTop_toBottomOf="@id/guideline"
      app:layout_constraintBottom_toBottomOf="parent"
      />
</androidx.constraintlayout.widget.ConstraintLayout>