<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginStart="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/app_icon"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toEndOf="@+id/app_icon"
        android:layout_toRightOf="@+id/app_icon"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Clash Royale"
        style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
        />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@id/app_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/app_icon"
        android:layout_toRightOf="@id/app_icon"
        android:src="@drawable/ic_star_black"
        />
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/star_icon"
        android:layout_toRightOf="@id/star_icon"
        android:textSize="10sp"
        tools:text="4.2"
        style="@style/Aptoide.TextView.Medium.S.Black"
        />
    <TextView
        android:id="@+id/downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/app_icon"
        android:layout_toRightOf="@id/app_icon"
        android:textSize="12sp"
        tools:text="1M Downloads"
        style="@style/Aptoide.TextView.Regular.XS.Grey"
        />
    <ImageView
        android:id="@+id/store_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@id/downloads"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/app_icon"
        android:layout_toRightOf="@id/app_icon"
        android:src="@drawable/ic_store"
        />
    <TextView
        android:id="@+id/store_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/downloads"
        android:layout_marginEnd="110dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="110dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/store_icon"
        android:layout_toRightOf="@id/store_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        tools:text="Royale App Store"
        style="@style/Aptoide.TextView.Regular.XS.Grey"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/downloads"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="8dp"
          android:layout_marginRight="8dp"
          android:textColor="@color/aptoide_orange"
          tools:text="0.56 APPC"
          style="@style/Aptoide.TextView.Regular.XS"
          />
      <ImageView
          android:id="@+id/appc_icon"
          android:layout_width="16dp"
          android:layout_height="16dp"
          android:src="@drawable/ic_appc_logo"
          />
    </LinearLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>