<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  tools:showIn="@layout/apps_bundle_item">

  <TextView
    android:id="@+id/bundle_title"
    style="@style/Aptoide.TextView.Regular.L.BlackAlpha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|start"
    android:layout_marginStart="8dp"
      tools:text="random bundle"
    android:layout_marginLeft="8dp"
      />

  <Button
    android:id="@+id/bundle_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    style="@style/Aptoide.Button.Flat"
      android:text="@string/button_header_more" />
</FrameLayout>