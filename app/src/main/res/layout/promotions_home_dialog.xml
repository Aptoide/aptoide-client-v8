<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AptoideThemeDefault"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_winter_bundle_illustration"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/holidayspromotion_title_holidays"
        style="@style/Aptoide.TextView.Regular.L.BlackAlpha"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/holidayspromotion_message_popup"
        style="@style/Aptoide.TextView.Regular.M.BlackAlpha"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        >
      <Button
          android:id="@+id/cancel_button"
          android:layout_width="78dp"
          android:layout_marginEnd="16dp"
          android:layout_marginRight="16dp"
          android:text="@string/skip"
          style="@style/Aptoide.Button.Flat"
          />
      <Button
          android:id="@+id/navigate_button"
          android:layout_width="116dp"
          android:text="check it out"
          style="@style/Aptoide.Button.Flat"
          />
    </LinearLayout>

  </LinearLayout>
</android.support.v7.widget.CardView>