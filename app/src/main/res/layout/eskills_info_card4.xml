<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="328dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/rounded_corners_bg"
    android:backgroundTint="@color/eskills_light_purple"
    android:orientation="vertical"
    >
  
  <ImageView
      android:id="@+id/appc_wallet_icon"
      android:layout_width="32dp"
      android:layout_height="32dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="24dp"
      android:src="@drawable/ic_appc_wallet_vec"
    />

  <TextView
      android:id="@+id/card_title"
      style="@style/Aptoide.TextView.Medium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/eskills_v2_card_8_title"
      android:textStyle="bold"
      android:textColor="@color/eskills_yellow"
      android:textSize="18sp"
      app:layout_constraintTop_toBottomOf="@id/appc_wallet_icon"
      android:layout_marginTop="8dp"
      />

  <TextView
      android:id="@+id/value_proposition_card_body"
      style="@style/Aptoide.TextView.Regular.S.White"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginHorizontal="20dp"
      android:layout_marginVertical="4dp"
      android:gravity="center"
      android:maxLines="3"
      android:text="@string/eskills_v2_card_8_body"
      app:layout_constraintTop_toBottomOf="@id/card_title"
      app:layout_constraintBottom_toTopOf="@id/guideline"
      />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_end="152dp"
      />
  <ImageView
      android:layout_width="124dp"
      android:layout_height="152dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:src="@drawable/eskills_withdraw"
    />
</androidx.constraintlayout.widget.ConstraintLayout>