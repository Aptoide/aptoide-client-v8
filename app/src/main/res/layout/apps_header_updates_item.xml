<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

  <TextView
      android:id="@+id/apps_updates_header_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="10dp"
      android:layout_marginLeft="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:ellipsize="end"
      android:maxLines="1"
      tools:text="Updates"
      style="@style/Aptoide.TextView.Regular.L.BlackAlpha"
      />

  <TextView
      android:id="@+id/apps_updates_update_all_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="16dp"
      android:layout_marginRight="16dp"
      android:ellipsize="end"
      android:maxLines="1"
      android:text="@string/apps_button_update_all"
      android:textAllCaps="true"
      style="@style/Aptoide.TextView.Medium.XS.Theme"
      />

</RelativeLayout>