<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
  <RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:gravity="center_vertical|center"
      android:padding="10dp"
      style="?attr/backgroundCard"
      >

    <!-- can be follow or open?! -->

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/recommended_store_action"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textAllCaps="true"
        tools:text="follow"
        style="@style/Aptoide.Button.S"
        />

    <ImageView
        android:id="@+id/store_avatar_row"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_avatar_apps"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@id/store_avatar_row"
        android:layout_toLeftOf="@id/recommended_store_action"
        android:layout_toRightOf="@+id/store_avatar_row"
        android:layout_toStartOf="@id/recommended_store_action"
        android:orientation="vertical"
        >


      <TextView
          android:id="@+id/recommended_store_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:text="@string/apps"
          style="@style/Aptoide.TextView.Medium.S.Black"
          />


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_user_shape"
            />

        <TextView
            android:id="@+id/recommended_store_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            tools:text="xxx"
            style="@style/Aptoide.TextView.Regular.S.Grey"
            />

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/ic_number_of_apps"
            />

        <TextView
            android:id="@+id/recommended_store_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            tools:text="xxxx"
            style="@style/Aptoide.TextView.Regular.S.Grey"
            />

      </LinearLayout>

    </LinearLayout>

  </RelativeLayout>
</android.support.v7.widget.CardView>