<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark"
    >

  <androidx.core.widget.NestedScrollView
      android:id="@+id/scroll_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/bundle_header_group"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >

        <ImageView
            android:id="@+id/eskills_logo_info"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/eskills_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:id="@+id/bundle_title"
            style="@style/Aptoide.TextView.Medium.M.White"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:lines="2"
            android:text="@string/eskills_v2_page_body_"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eskills_logo_info"
            />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <include
          android:id="@+id/values_stats"
          layout="@layout/eskills_values_stats"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          />
      <include
          android:id="@+id/games"
          layout="@layout/eskills_learn_more_games"
          android:layout_marginHorizontal="8dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="40dp"
          />

      <include
          android:id="@+id/learn_more"
          layout="@layout/eskills_info_section_scrollable"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="32dp"
          />

      <include
          layout="@layout/eskills_flow_graphic"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="56dp"
          />
      <include
          android:id="@+id/eskills_faqs"
          layout="@layout/eskills_faqs"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="16dp"
          android:layout_marginVertical="56dp"
          />
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>

  <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar_layout"
      android:layout_width="match_parent"
      android:layout_height="?android:actionBarSize"
      app:layout_constraintTop_toTopOf="parent"
      android:background="@color/grey_900"
      style="@style/ToolbarDark"
      >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_readmore"
        />
  </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
