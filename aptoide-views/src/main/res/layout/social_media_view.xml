<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/social_media_background"
    >

  <TextView
      android:id="@+id/social_media_introduction"
      style="@style/Aptoide.TextView.Regular.L.TextColorSocialMedia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:text="@string/editorial_bottom_follow_us"
      tools:text="follow us test bigger lang"
      />

  <ImageView
      android:id="@+id/facebook_button"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="?attr/icFacebook"
      app:layout_constraintHorizontal_bias="1"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/tiktok_button"
      app:layout_constraintStart_toEndOf="@id/social_media_introduction"
      />

  <ImageView
      android:id="@+id/twitter_button"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="?attr/icTwitter"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:id="@+id/tiktok_button"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:src="?attr/icTiktok"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/instagram_button"
      />

  <ImageView
      android:id="@+id/instagram_button"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_marginEnd="8dp"
      android:layout_marginRight="8dp"
      android:src="?attr/icInstagram"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/twitter_button"
      />

</androidx.constraintlayout.widget.ConstraintLayout>